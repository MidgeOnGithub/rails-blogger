<h1>Articles Tagged with "<%= @tag.name %>"</h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>
<br />
<%= link_to "Delete Tag", tag_path(@tag), method: :delete, data: {confirm: "Permanently delete the tag?"} %>
<br /><br />
<p><%= link_to "See all tags", tags_path %></p>